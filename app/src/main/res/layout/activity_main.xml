<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/hlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonE"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="e" />
        <Button
            android:id="@+id/buttonU"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="u" />
        <Button
            android:id="@+id/buttonSIN"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="sin" />
        <Button
            android:id="@+id/buttonDEG"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="deg" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="34dp"
        app:layout_constraintTop_toBottomOf="@+id/hlayout1">

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="A" />

        <Button
            android:id="@+id/buttonBCK"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="bs" />

        <Button
            android:id="@+id/buttonDIV"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="/" />

        <Button
            android:id="@+id/buttonX"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="*" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/hlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        app:layout_constraintTop_toBottomOf="@id/hlayout2">

        <Button
            android:id="@+id/button7"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="7" />
        <Button
            android:id="@+id/button8"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="8"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="9" />
        <Button
            android:id="@+id/buttonMINUS"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="-" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/hlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintTop_toBottomOf="@+id/hlayout3">

        <Button
            android:id="@+id/button4"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="4" />
        <Button
            android:id="@+id/button5"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="5" />
        <Button
            android:id="@+id/button6"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="6" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hlayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintTop_toBottomOf="@+id/hlayout4">

        <Button
            android:id="@+id/button1"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="1" />
        <Button
            android:id="@+id/button2"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="2"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/button3"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="3"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hlayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintTop_toBottomOf="@+id/hlayout5">

        <Button
            android:id="@+id/button0"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:text="0"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/buttonPOINT"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="."
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <Button
        android:id="@+id/buttonPLUS"
        android:layout_width="62dp"
        android:layout_height="96dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="22dp"
        android:layout_weight="1"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hlayout4"
        app:layout_constraintTop_toBottomOf="@id/hlayout3"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/buttonEQUAL"
        android:layout_width="62dp"
        android:layout_height="96dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="26dp"
        android:layout_weight="1"
        android:text="="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hlayout4"
        app:layout_constraintTop_toBottomOf="@id/buttonPLUS"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>