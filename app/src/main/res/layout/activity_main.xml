<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FB"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/hlayout0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/stepsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"
            android:text="6000/2+3227*2" />
        <TextView
            android:id="@+id/outputTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"
            android:text="=12,454"
            android:textSize="40dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hlayout0">

        <Button
            android:id="@+id/buttonE"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_shape"
            android:text="e" />
        <Button
            android:id="@+id/buttonU"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_shape"
            android:text="Î¼" />
        <Button
            android:id="@+id/buttonSIN"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_shape"
            android:text="sin"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true" />
        <Button
            android:id="@+id/buttonDEG"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_shape"
            android:text="deg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="34dp"
        app:layout_constraintTop_toBottomOf="@+id/hlayout1">

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="Ac"
            android:textSize="20dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"/>

        <Button
            android:id="@+id/buttonBCK"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:drawableLeft="@drawable/vector"
            android:text=""/>

        <Button
            android:id="@+id/buttonDIV"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="/" />

        <Button
            android:id="@+id/buttonX"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="*" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/hlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        app:layout_constraintTop_toBottomOf="@id/hlayout2">

        <Button
            android:id="@+id/button7"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="7" />
        <Button
            android:id="@+id/button8"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="8"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="9" />
        <Button
            android:id="@+id/buttonMINUS"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="-" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/hlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintTop_toBottomOf="@+id/hlayout3">

        <Button
            android:id="@+id/button4"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="4" />
        <Button
            android:id="@+id/button5"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="5" />
        <Button
            android:id="@+id/button6"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="6" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hlayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintTop_toBottomOf="@+id/hlayout4">

        <Button
            android:id="@+id/button1"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="1" />
        <Button
            android:id="@+id/button2"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="2"
            android:background="@drawable/button_shape"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/button3"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="3"
            android:background="@drawable/button_shape"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hlayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintTop_toBottomOf="@+id/hlayout5">

        <Button
            android:id="@+id/button0"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:text="0"
            android:background="@drawable/button_shape"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/buttonPOINT"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="."
            android:background="@drawable/button_shape"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonPLUS"
        android:layout_width="62dp"
        android:layout_height="96dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hlayout4"
        app:layout_constraintTop_toBottomOf="@id/hlayout3"
        android:background="@drawable/button_shape"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/buttonEQUAL"
        android:layout_width="62dp"
        android:layout_height="96dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hlayout4"
        app:layout_constraintTop_toBottomOf="@id/buttonPLUS"
        android:background="@drawable/button_shape"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>